# Backend Environment Variables
# Copy this to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database - MongoDB Atlas (REQUIRED)
# Get from: https://cloud.mongodb.com → Your Cluster → Connect
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/campusx?retryWrites=true&w=majority

# JWT Authentication (REQUIRED)
JWT_SECRET=generate_a_random_secret_key_here
JWT_EXPIRE=30d

# Cloudinary (Image Storage) - REQUIRED for uploads
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Service (Gmail) - OPTIONAL
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=campusx.noreply@gmail.com
EMAIL_PASSWORD=your-gmail-app-password

# Payment Gateway (Razorpay) - NOT NEEDED (UPI is simulated)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret-key

# AI Services (OpenAI) - OPTIONAL (costs money, skip for prototype)
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx

# Frontend URL (for CORS) - UPDATE AFTER VERCEL DEPLOYMENT
FRONTEND_URL=https://campusx.vercel.app
